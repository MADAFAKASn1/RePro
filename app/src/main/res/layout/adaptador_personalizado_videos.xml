<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textViewName"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/nombre_video"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/play_pause"
        android:contentDescription="@string/play_pause"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/videoView"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:layout_toStartOf="@+id/siguiente"
        android:background="@color/white"
        app:srcCompat="@drawable/icons8_play_30" />

    <ImageButton
        android:id="@+id/siguiente"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/videoView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="-68dp"
        android:background="@color/white"
        android:contentDescription="@string/siguiente"
        app:srcCompat="@drawable/icons8_doble_derecha_30" />

    <ImageButton
        android:id="@+id/anterior"
        android:contentDescription="@string/anterior"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/videoView"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:layout_toStartOf="@+id/play_pause"
        android:background="@color/white"
        app:srcCompat="@drawable/icons8_flecha_izquierda_30" />


</RelativeLayout>